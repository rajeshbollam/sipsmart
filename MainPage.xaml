<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SipSmart.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="20" Style="{StaticResource ContentPageStyle}">
        <Image Source="your_logo.png" HeightRequest="100" HorizontalOptions="CenterAndExpand" />
        <Frame BackgroundColor="#ecf0f1" CornerRadius="5" Padding="0">
        <Entry Placeholder="Username" x:Name="UsernameEntry" Margin="0,10,0,10" Style="{StaticResource EntryStyle}"/>
        </Frame>
        <Frame BackgroundColor="#ecf0f1" CornerRadius="5" Padding="0">
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Margin="0,0,0,10" Style="{StaticResource EntryStyle}"/>
        </Frame>
        <Button Text="Login" Clicked="OnLoginButtonClicked" Style="{StaticResource BlueButtonStyle}"/>

        <Label Text="Don't have an account? " />
        <Button Text="Sign Up" Clicked="OnSignUpButtonClicked" Style="{StaticResource BlueButtonStyle}"/>

        <Label Text="Forgot your password? " />
        <Button Text="Forgot Password" Clicked="OnForgotPasswordButtonClicked" Style="{StaticResource BlueButtonStyle}"/>
    </StackLayout>

</ContentPage>
